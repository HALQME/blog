---
import Tag from "@/components/ui/Tag.astro";
import WaterFall from "@/components/ui/WaterFall.astro";
import { Tag as TagClass } from "@/tags";
import { styles } from "@/styles/tailwind";

import { languageTags } from "@/tags";

// 既定タグあればソレを使用、無ければTag Classの初期化を求める
const heroTags = [
    new TagClass("Philosophy", "yellow"),
    languageTags.filter((tag) => tag.name === "Swift")[0],
    languageTags.filter((tag) => tag.name === "TypeScript")[0],
    languageTags.filter((tag) => tag.name === "Tailwind CSS")[0],
    languageTags.filter((tag) => tag.name === "Astro.js")[0],
    languageTags.filter((tag) => tag.name === "Haskell")[0],
];
---

<section class="relative h-[67vh] py-16 overflow-hidden" data-pagefind-ignore>
    <div class="absolute inset-0 z-0">
        <div
            class="my-4 rounded-3xl absolute inset-0 bg-gradient-to-br from-cyan-500/20 to-violet-500/20 dark:from-cyan-900/30 dark:to-violet-900/30"
        >
        </div>
    </div>
    <div class={`relative z-10 ${styles.layout.sectionIndex}`}>
        <div class={`${styles.flex.column} text-center items-center`}>
            <h1 class="text-5xl font-bold text-gray-900 dark:text-white mb-6">
                I'm, HALQME
            </h1>
            <div
                class="flex justify-center gap-2 max-w-sm mx-4 mb-6 p-4 bg-white/50 dark:bg-gray-900/50 backdrop-blur-sm rounded-lg"
            >
                <WaterFall>
                    {heroTags.map((tag) => <Tag tag={tag} />)}
                </WaterFall>
            </div>
            <div class="flex justify-center gap-4">
                <a href="/blog" class={styles.components.button.primary}>
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            d="M5 3a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V5a2 2 0 00-2-2H5zm0 2h10v7h-2l-1 2H8l-1-2H5V5z"
                        ></path>
                    </svg>
                    Blog
                </a>
                <a href="/projects" class={styles.components.button.secondary}>
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"
                            clip-rule="evenodd"></path>
                    </svg>
                    Projects
                </a>
            </div>
        </div>
    </div>
</section>
