---
import { iconPaths } from "@/components/ui/IconPaths";
interface Props {
    icon: keyof typeof iconPaths;
    href: string;
    title: string;
}

import Icon from "@/components/ui/Icon.astro";
const { icon, href, title } = Astro.props as Props;
---

<div
    class="transform hover:scale-105 transition-all duration-300 ease-in-out m-4"
>
    <a
        href={href}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center flex-row space-x-4 px-8 py-6 rounded-lg bg-gray-300/10 dark:bg-gray-700/10 border border-gray-400/30 backdrop-blur-sm text-gray-800 dark:text-gray-200 hover:text-blue-500 dark:hover:text-blue-400 hover:border-blue-500/30 dark:hover:border-blue-400/30 hover:bg-blue-50/50 dark:hover:bg-blue-900/20 transition-all duration-300"
    >
        <div class="scale-150">
            <Icon icon={icon} />
        </div>
        <span class="font-medium text-lg">{title}</span>
    </a>
</div>
