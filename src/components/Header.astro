---
import ThemeToggle from "./ThemeToggle.astro";

const links = [{ href: "/blog", label: "Blog", icon: "i-lucide:pen-tool" }];
---

<header
  class="mx-auto flex h-16 w-full max-w-5xl items-center justify-between px-6 select-none md:px-12"
>
  <a
    href="/"
    class="text-primary hover:text-subtle text-xl font-black tracking-tighter transition-colors"
  >
    HALQME
  </a>
  <div class="flex items-center gap-2">
    <nav aria-label="メインナビゲーション">
      <ul class="flex gap-4">
        {
          links.map((link) => (
            <li>
              <a
                href={link.href}
                class="link-nav flex-inline items-center gap-1 py-1.5"
                aria-current={
                  Astro.url.pathname.startsWith(link.href) ? "page" : undefined
                }
              >
                <div class={link.icon} aria-hidden="true" />
                {link.label}
              </a>
            </li>
          ))
        }
        <li>
          <a
            href="/halqme_portfolio.pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="link-nav flex-inline items-center gap-1 py-1.5"
          >
            <div class="i-lucide:file-text" aria-hidden="true"></div>
            CV
          </a>
        </li>
      </ul>
    </nav>
    <ThemeToggle />
  </div>
</header>
