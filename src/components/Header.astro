---
import ThemeToggle from "./ThemeToggle.astro";

const links = [
  { href: "/blog", label: "Blog", icon: "i-lucide:pen-tool" },
  { href: "/halqme_portfolio.pdf", label: "CV", icon: "i-lucide:file-text" },
];
---

<header
  class="mx-auto flex h-16 w-full max-w-5xl items-center justify-between px-6 select-none md:px-12"
>
  <a
    href="/"
    class="text-primary hover:text-subtle text-xl font-black tracking-tighter transition-colors"
  >
    HALQME
  </a>
  <div class="flex items-center gap-2">
    <nav>
      <ul class="flex gap-4">
        {
          links.map((link) => (
            <li>
              <a
                href={link.href}
                class="link-nav flex-inline items-center gap-1 px-3 py-1.5"
              >
                <div class={link.icon} />
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <ThemeToggle />
  </div>
</header>
