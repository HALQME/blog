---
const today = new Date();
---

<footer class="mt-auto w-full py-8 text-center border-t border-lighter">
  <div class="container-narrow">
    <div class="mb-4 flex justify-center gap-4">
      <a
        href="https://github.com/HALQME"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-ghost group p-2 flex flex-col"
        aria-label="GitHub"
      >
        <span class="text-sm opacity-0 transition-opacity group-hover:opacity-100">GitHub</span>
        <div class="i-lucide:github text-xl"></div>
      </a>
      <a
        href="https://x.com/halqme_dev"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-ghost group p-2 flex flex-col"
        aria-label="X (Twitter)"
      >
        <span class="text-sm opacity-0 transition-opacity group-hover:opacity-100">Twitter</span>
        <div class="i-lucide:twitter text-xl"></div>
      </a>
      <a
        href="https://zenn.dev/hal227"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-ghost group p-2 flex flex-col"
        aria-label="Zenn"
      >
        <span class="text-sm opacity-0 transition-opacity group-hover:opacity-100">Zenn</span>
        <div class="i-simple-icons:zenn text-xl"></div>
      </a>
    </div>
    <p class="text-caption">
      &copy; {today.getFullYear()} HALQME. All rights reserved.
    </p>
  </div>
</footer>
