---
const today = new Date();
---

<footer class="mt-auto w-full border-t border-gray-200 py-8 text-center">
  <div class="container-narrow">
    <div class="mb-4 flex justify-center gap-4">
      <a
        href="https://github.com/HALQME"
        target="_blank"
        class="btn-ghost p-2"
        aria-label="GitHub"
      >
        <div class="i-lucide:github text-xl"></div>
      </a>
      <a
        href="https://x.com/halqme_dev"
        target="_blank"
        class="btn-ghost p-2"
        aria-label="X (Twitter)"
      >
        <div class="i-lucide:twitter text-xl"></div>
      </a>
      <a
        href="https://zenn.dev/hal227"
        target="_blank"
        class="btn-ghost p-2"
        aria-label="Zenn"
      >
        <div class="i-lucide:book-open-text text-xl"></div>
      </a>
    </div>
    <p class="text-caption">
      &copy; {today.getFullYear()} HALQME. All rights reserved.
    </p>
  </div>
</footer>
