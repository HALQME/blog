---
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<section class="section section-border">
  <div class="flex items-start justify-between select-none">
    <h2 class="text-headline flex items-center gap-3 mb-8">
      <div class="i-lucide:pen-tool"></div>
      Recent Posts
    </h2>
    <a href="/blog" class="btn-ghost text-sm">
      View all
      <div class="i-lucide:arrow-right"></div>
    </a>
  </div>
  <div class="grid gap-6 md:grid-cols-3">
    {
      posts.map((post) => (
        <article class="">
          <a href={`/blog/${post.id}/`} class="block group">
            <h3 class="text-subhead mb-2 decoration-2 underline-offset-4 group-hover:underline">
              {post.data.title}
            </h3>
            <div class="text-label mb-3 flex-inline items-center">
              <div class="i-lucide:calendar"></div>
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString("ja-JP")}
              </time>
            </div>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {post.data.tags.slice(0, 2).map((tag) => (
                  <span class="text-caption">
                    <div class="i-lucide:tag text-gray-400"></div>
                    {tag}
                  </span>
                ))}
                {post.data.tags.length > 2 && (
                  <span class="text-caption">
                    +{post.data.tags.length - 2}
                  </span>
                )}
              </div>
            )}
          </a>
        </article>
      ))
    }
  </div>
</section>
