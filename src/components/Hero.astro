<section class="py-12 text-center md:py-20">
  <h1 class="text-display mb-4"><span id="select_target">HAL</span>QME</h1>
  <div class="flex justify-center gap-4 select-none">
    <a href="https://github.com/HALQME" class="btn-primary">
      <div class="i-lucide:github"></div>
      GitHub
    </a>
    <a href="/blog" class="btn-secondary">
      <div class="i-lucide:book-open-text"></div>
      Read Blog
    </a>
  </div>
</section>
<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
  const element = document.getElementById("select_target");
  if (element && window.getSelection) {
    const range = document.createRange();
    range.selectNodeContents(element);
    const selection = window.getSelection();
    selection.removeAllRanges();
    selection.addRange(range);
  }
});
</script>
