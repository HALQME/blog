---
const projects = [
  {
    name: "slide_bun",
    description: "Markdownでスライドを作成できるBun製ツール",
    url: "https://github.com/HALQME/slide_bun",
    tech: ["TypeScript", "Bun"],
  },
  {
    name: "btuin",
    description: "Bun向けの宣言的TUIフレームワーク",
    url: "https://github.com/HALQME/btuin",
    tech: ["TypeScript", "Bun"],
  },
  {
    name: "Fai",
    description: "Apple Foundation Models用CLIチャットツール",
    url: "https://github.com/HALQME/Fai",
    tech: ["Swift"],
  },
  {
    name: "omu-aikido-app",
    description: "大阪公立大学合氣道部の稽古管理アプリ",
    url: "https://github.com/omu-aikido/omu-aikido-app",
    tech: ["TypeScript", "Hono", "Vue.js"],
  },
];
---

<section class="section-base">
  <h2 class="heading-2 mb-8 select-none">
    <div class="i-lucide:folder-git-2"></div>
    Projects
  </h2>
  <div class="grid gap-6 md:grid-cols-2">
    {
      projects.map((project) => (
        <a href={project.url} target="_blank" class="card-interactive group">
          <h3 class="heading-3 mb-2 flex items-center justify-between">
            <span class="decoration-2 underline-offset-4 group-hover:underline">
              {project.name}
            </span>
            <div class="i-lucide:external-link text-gray-400 transition-colors group-hover:text-black" />
          </h3>
          <p class="text-sub mb-2">{project.description}</p>
          <div class="flex flex-wrap items-center gap-2 select-none">
            {project.tech.map((t) => (
              <span class="tag text-xs">{t}</span>
            ))}
          </div>
        </a>
      ))
    }
  </div>
</section>
