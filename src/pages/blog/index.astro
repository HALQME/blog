---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "@/components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

import { randInt } from "./_random";
import { styles } from "@/styles/tailwind";
function imageGenerate(src: string | undefined, id: string) {
    const slug = randInt(0, 3, id);
    const image = `/placeholder/blog-placeholder-${slug}.jpg`;
    return src ?? image;
}

const latestPost = posts[0];
const remainingPosts = posts.slice(1, 5);

const hasNextPage = posts.length > 10;
---

<Layout title="Blog - Top | HALQME">
    <section class={styles.layout.container} data-pagefind-ignore>
        <h1 class={styles.text.heading.h1}>Blog</h1>
        {
            posts.length === 0 ? (
                <div class="text-center py-12">
                    <p class={styles.text.body.muted}>No posts found.</p>
                </div>
            ) : (
                <>
                    <article
                        class={
                            styles.components.card.wrapper +
                            " px-2 sm:px-16 md:px-20 lg:px-24"
                        }
                    >
                        <a href={`/blog/${latestPost.id}/`} class="block">
                            <div class={styles.components.card.container}>
                                <div class={styles.utils.aspectRatio.wide}>
                                    <img
                                        width={1080}
                                        height={540}
                                        src={imageGenerate(
                                            latestPost.data.heroImage,
                                            latestPost.id
                                        )}
                                        alt="Placeholder"
                                        class="object-cover w-full h-full"
                                    />
                                </div>
                                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                            </div>
                            <div class={styles.components.card.content}>
                                <h2
                                    class={`${styles.text.heading.h2} group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors line-clamp-2`}
                                >
                                    {latestPost.data.title}
                                </h2>
                                <div class="flex items-center mt-2 text-sm text-gray-600 dark:text-gray-400">
                                    <svg
                                        class="w-4 h-4 mr-2"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                    <FormattedDate
                                        date={latestPost.data.pubDate}
                                    />
                                </div>
                            </div>
                        </a>
                    </article>
                    <hr class="border-gray-200 dark:border-gray-700 my-6" />
                    <div class={styles.grid.blog}>
                        {remainingPosts.map((post) => (
                            <article class={styles.components.card.wrapper}>
                                <a href={`/blog/${post.id}/`} class="block">
                                    <div
                                        class={styles.components.card.container}
                                    >
                                        <div
                                            class={
                                                styles.utils.aspectRatio.video
                                            }
                                        >
                                            <img
                                                width={720}
                                                height={360}
                                                src={imageGenerate(
                                                    post.data.heroImage,
                                                    post.id
                                                )}
                                                alt="Placeholder"
                                                class="object-cover w-full h-full"
                                            />
                                        </div>
                                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                                    </div>
                                    <div class={styles.components.card.content}>
                                        <h2 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors line-clamp-2">
                                            {post.data.title}
                                        </h2>
                                        <div class="flex items-center mt-2 text-sm text-gray-600 dark:text-gray-400">
                                            <svg
                                                class="w-4 h-4 mr-2"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            <FormattedDate
                                                date={post.data.pubDate}
                                            />
                                        </div>
                                    </div>
                                </a>
                            </article>
                        ))}
                    </div>
                    {hasNextPage && (
                        <div class="mt-8 text-center">
                            <a
                                href={`/blog/1/`}
                                class={styles.text.link.default}
                            >
                                Load more posts
                            </a>
                        </div>
                    )}
                </>
            )
        }
    </section>
</Layout>
