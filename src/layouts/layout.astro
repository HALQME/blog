---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "HALQME's Portfolio and Blog" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex min-h-screen flex-col bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] font-sans text-gray-900"
  >
    <Header />
    <main class="layout-container w-full flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  ::selection {
    background-color: black;
    color: white;
  }
</style>
