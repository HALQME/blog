---
import "@/styles/global.css";
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/consts";
import { ClientRouter } from "astro:transitions";
interface Props {
    title?: string;
    description?: string;
    heroImage?: string;
}

const {
    title = SITE_TITLE,
    description = SITE_DESCRIPTION,
    heroImage,
} = Astro.props;
---

<!doctype html>
<html lang="ja" class="bg-gray-200 dark:bg-gray-800 backdrop-blur-md">
    <head>
        <BaseHead title={title} description={description} image={heroImage} />
    </head>

    <body
        class="scroll-smooth min-h-screen bg-gradient-to-br from-gray-100 dark:from-gray-800 to-white dark:to-gray-900 text-gray-900 dark:text-gray-100"
    >
        <Header />
        <main class="min-h-screen max-w-4xl mx-auto my-8 pt-12">
            <slot />
        </main>
        <Footer />
    </body>
</html>
